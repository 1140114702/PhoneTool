<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="官方介绍"
            android:textColor="#333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/app_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/app_content"
            android:textColor="#666"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/app_detail_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="详细介绍"
                android:textColor="#999"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/app_detail_more_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_view"
                android:src="@mipmap/ic_more_down" />
        </RelativeLayout>

        <View
            style="@style/line_horizontal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版本：2.0.5"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="版本号：40"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语言：简体"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="类型：软件"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统要求：Android 4.0.3"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="更新：2016/11/18 下午2:41:39"
            android:textColor="#333"
            android:textSize="14sp" />

        <TextView
            android:layout_marginBottom="66dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作者：中山亿动网络科技有限公司"
            android:textColor="#333"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.design.widget.AppBarLayout>